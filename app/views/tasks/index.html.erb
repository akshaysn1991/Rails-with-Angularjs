<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Task name</th>
    <th>Project</th>
    <th>Task type</th>
    <th>Eta hrs</th>
    <th>Actual hrs</th>
    <th>Status</th>
    <th>Parent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.task_name %></td>
    <td><%= task.project %></td>
    <td><%= task.task_type %></td>
    <td><%= task.eta_hrs %></td>
    <td><%= task.actual_hrs %></td>
    <td><%= task.status %></td>
    <td><%= task.parent_id %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

